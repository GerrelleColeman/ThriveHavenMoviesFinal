@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<Movie>
<!-- Bootstrap 5 CSS -->

<!-- Inline CSS for banner styling -->
<style>
    .banner-container {
        position: relative;
        background-image: url('/Images/movieStock.jpg'); /* Replace with your actual path */
        background-size: cover;
        background-position: center;
        height: 60vh;
        overflow: hidden;
        
    }

        .banner-container::before {
            content: '';
            position: absolute;
            inset: 0;
            backdrop-filter: blur(4px);
            background-color: rgba(0, 0, 0, 0.4);
            z-index: 1;
        }

    .banner-content {
        position: relative;
        z-index: 2;
        color: white;
        text-align: center;
    }
</style>

<!-- Banner Section -->
<div class="banner-container d-flex align-items-center justify-content-center">
    <div class="banner-content">
        <h1 class="display-3 fw-bold">ThriveHaven Movies</h1>
        <p class="lead">Discover. Watch. Enjoy.</p>
    </div>
</div>

<!--Featured Movies-->
<section class="Movies text-center mt-5">
    <h2 class="mb-3">Featured Movies</h2>
    <div class="container">
        <div class="card mb-4" style="width: 80%; margin: 0 auto; ">
            <div class="position-relative">
                <!-- Image on top -->
                <img id="movieImage" src="/Images/MovieList/La La Land.jpg" 
                     class="card-img-top"
                     alt="Movie Poster"
                     style="width: 300px; height: auto; object-fit: cover;">
               
            </div>
            <div class="text-end text px-2 pt-1" style="font-size: 9px;color:black">
                This photo by Unknown Author is licensed under CC BY-SA
            </div>

            <!-- Text and buttons below -->
            <div class="card-body d-flex justify-content-between">
                <!-- View Movie Gallery button to link to the MovieList page -->
                <a href="@Url.Action("List", "Movie")" class="btn btn-primary">View Movie Gallery</a>

                <!-- Next View button functionality to switch between images -->
                <a href="javascript:void(0)" class="btn btn-primary" onclick="nextMovie()">Next View</a>
            </div>
        </div>
    </div>
</section>

<script>
    // List of movie images
    const movieImages = [
        "/Images/MovieList/La La Land.jpg",
        "/Images/MovieList/The Great Gatsby.jpg",
        "/Images/MovieList/Hunger Games.jpg" // Add more images here
    ];

    let currentImageIndex = 0;

    function nextMovie() {
        // Increment the image index
        currentImageIndex++;

        // If we go beyond the array length, start from the beginning
        if (currentImageIndex >= movieImages.length) {
            currentImageIndex = 0;
        }

        // Change the image source to the next movie image
        document.getElementById("movieImage").src = movieImages[currentImageIndex];
    }
</script>


<!-- Main Content -->
<div class="container mt-5">
    <h2 class="text-center mb-4">About Us</h2>
    <p class="fs-5 text-muted text-center">
        Our business’s mission at Thrive Haven is to immerse our customers into a whole new realm of cinematic wonder where every visit is a journey of excitement, comfort, and unparalleled service. Thrive Haven provides a 3d movie watching experience including a 4DX experience with motion moving chairs. To immerse you into the film. The seats recline for your comfort and there is food delivery to your seat through ordering through the app alongside a loyalty program to give you discounts on the purchase of future tickets and food from the concession stand. Thrive Haven also offers delivery of food to customers at home. While offering a wide range of films for customers to choose from.
    </p>
</div>